{% set title = "Наши группы" %}

{% set allgroups = "все группы" %}

{%
    set groups_item = [
        {
            "header": "Ета превлю названия группы",
            "preview": "Маленький рост и карликовость Федора связана с тем, что он пил, курил, мало ел овощей и вообще дрыщ по жизни",
            "link": "Подробнее",
            "href": "/group.html",
            "src": "./images/black.jpg"
        },
        {
            "header": "Ета превлю заголовка",
            "preview": "При выборе элементов фильтра и нажатия кнопки Submit, должны отсылаться данные в POST и обновляться элемент, который отвечает за список товаров.",
            "link": "Подробнее",
            "href": "/group.html",
            "src": "./images/black.jpg"
        }
    ]
%}

<section class="groups">
        <div class="content">
        <h2 class="header">{{title}}</h2>
        <div class="groups-block">
            {% for item in groups_item %}
                <div class="groups-item">
                    <div class="groups-caption">
                        <h3>{{item.header}}</h3>
                        <img class="groups-img" src="{{item.src}}">
                    </div>
                    <div class="groups-preview">
                        <div class="groups-preview-cut">
                            <p>{{item.preview}}</p>
                        </div>
                        <span>
                            <a href="{{item.href}}">{{item.link}}</a>
                        </span>
                    </div>
                </div>
            {% endfor %}
        </div>        
        <a class="button borders" href="/groups.html">{{allgroups}}</a>
    </div>
</section>